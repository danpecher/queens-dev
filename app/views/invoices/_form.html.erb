    <%= f.input :number %>

    <%= f.nested_fields_for :invoice_items do |ff| %>
        <%= ff.input :product_variant_id, as: :grouped_select, collection: Product.all, group_method: :product_variants, label_method: :code %>
        <%= ff.input :quantity, {input_html: {min: 1}} %>
        <%= ff.remove_nested_fields_link do %>
            <i class="fa fa-trash"></i>
        <% end %>
    <% end %>

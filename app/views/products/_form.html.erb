<%= simple_form_for @product do |f| %>
    <%= f.input :name %>

    <%= f.nested_fields_for :product_variants do |ff| %>
        <%= ff.input :code, label: 'Kód varianty' %>
        <%= ff.remove_nested_fields_link do %>
            <i class="fa fa-trash"></i>
        <% end %>
    <% end %>
    <%= f.add_nested_fields_link :product_variants %>

    <%= f.button :submit, 'Uložit' %>
<% end %>